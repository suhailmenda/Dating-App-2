<h1>{{title}}</h1>

<form action="/profile/edit/{{profile._id}}" method="post">

  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="{{profile.name}}" required>
  
  <label for="age">Age:</label>
  <input type="number" id="age" name="age" value="{{profile.age}}" required>
  
  <label for="interests">Interests (comma-separated):</label>
  <input type="text" id="interests" name="interests" value="{{profile.interests}}" required>
  
  <label for="bio">Bio:</label>
  <textarea id="bio" name="bio" required>{{profile.bio}}</textarea>
  
  <button type="submit">Update Profile</button>
</form>
